<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

   <div class="container">
    <form class="form-horizontal" action="<% if(editing) { %>/edit-product <% } else { %>/add-product<% } %>" method="POST">
      <div class="form-group">
        <label class="control-label col-sm-4" for="product">Add product</label>
        <div class="col-sm-12">
        <input class="form-control" type="text" name="product" id="title" value="<% if(editing) { %><%= product.title %> <% } %>">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-4" for="imageURL">Image URL</label>
        <div class="col-sm-12">
        <input type="text" name="imageURL" id="imageURL" class="form-control" value="<% if(editing) { %><%= product.imageURL %> <% } %>">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="price">Price</label>
        <div class="col-sm-12">
        <input type="number" name="price" id="price" class="form-control" step="0.01" value=<% if(editing) { %><%= product.price %> <% } %>>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-4" for="description">Description</label>
        <div class="col-sm-12">
        <textarea name="description" id="description" rows="4" class="form-control" ><% if(editing) { %><%= product.description %> <% } %></textarea>
        </div>
      </div>
      <% if(editing) { %>
        <input type="hidden" name="productID" value="<%= product.id%>">
        <% } %>
      <button class="btn" type="submit"><% if(editing) { %>Update product <% } else { %>Add product<% } %></button>
    </form>
</div>

<%- include('../includes/end.ejs') %>

