<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="container">
    <main>
        <% if (products.length > 0) { %>
            <div class="card">
                <% for (let product of products) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.productData.title %></h1>
                        </header>
                        <div class="card__image card-img-top center responsive">
                            <img src="<%= product.productData.imageURL%>";
                                alt="<%= product.productData.imageURL%>">
                        </div>
                        <div class="card__content card-body">
                            <h2 class="product__price card-title">Quantity : [<%= product.qty %>]</h2>
                        </div>
                        <div class="card__actions">
                            <form action="/delete-cart-item" method="POST">
                                <button class="btn btn-primary">Delete item</button>
                                <input type="hidden" name="productID" value="<%= product.productData.id%>">
                           </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>Cart is empty!</h1>
        <% } %>
    </main>
</div>

<%- include('../includes/end.ejs') %>
